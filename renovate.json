{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "Europe/Brussels",
  "assignees": [
    "robbeverhelst"
  ],
  "reviewers": [
    "robbeverhelst"
  ],
  "packageRules": [
    {
      "rangeStrategy": "bump",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "groupName": "Biome",
      "matchPackageNames": [
        "@biomejs/biome"
      ]
    },
    {
      "groupName": "TypeScript",
      "matchPackageNames": [
        "typescript",
        "@types/bun"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on monday"
    ]
  }
}
